{
    "name": "laia/agent-panorama",
    "description": "Proyecto base para el chatbot LAIA",
    "type": "project",
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0",
        "google-gemini-php/client": "^2.6",
        "guzzlehttp/guzzle": "^7.8",
        "barryvdh/laravel-dompdf": "^2.0",
        "maatwebsite/excel": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "php -r \"if (file_exists('artisan')) { passthru('php artisan package:discover --ansi'); }\""
        ],
        "post-update-cmd": [
            "php -r \"if (file_exists('artisan')) { passthru('php artisan migrate --seed'); }\""
        ]
    }
}